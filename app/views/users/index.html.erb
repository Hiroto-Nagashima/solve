<div class = "side-bar">
  <div class="container">
     <h2>User</h2>
     <%= attachment_image_tag @user, :profile_image, :fill,, fallback: "no_image.jpg"%>
     <table class="table">
       <tbody>
         <tr>
           <th>name</th>
           <th><%= "#{@user.name}" %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= @user.introduction %></th>
         </tr>
       </tbody>
     </table>
  </div>
  <div>
    <%= link_to "#",edit_user_path(@user.id) ,class: 'btn btn-outline-secondary btn-sm btn-block fas fa-user-cog'%>
  </div>
</div>