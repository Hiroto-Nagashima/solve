<h2 class = "follow_list">Follow</h2>
  <% @follows.each do |f| %>
    <div class = "eachPost">
      <div class = "post-wrapper">
        <div class = "post-head">
          <%= attachment_image_tag f ,:profile_image ,size: "40x40" ,class:"userImg"%>
          <p><%= link_to f.name , user_path(f) ,class: "userName",data: {"turbolinks"=>false}%></p>
           <% if user_signed_in? && f != current_user %>
          <div id="follow_form">
            <% if current_user.following?(f) %>
              <%= render "unfollow" %>
            <% else %>
              <%= render "follow" %>
            <% end %>
           </div>
          <% end %>
        </div>
        <p class = "postedContent"><%= f.introduction %></p>
      </div>
    </div>
  <% end %>