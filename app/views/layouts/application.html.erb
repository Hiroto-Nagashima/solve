<!DOCTYPE html>
<html>
  <head>
    <title>Solve</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <div class="container-fluid border-bottom">
      <% if user_signed_in? && !(controller.action_name == "top" && controller.controller_name == "homes") %>
          <header class="row d-block">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container">
                    <%= link_to users_path, target: "_blank" do %>
                    <%= image_tag 'logo.jpg',size:'90x90'  %>
                    <%end%>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ml-auto">
                              <li class="nav-item ">
                                <%= link_to "MyPage", user_path(current_user.id) ,class: 'nav-link fas fa-home text-dark'%></i>
                              </li>
                               <li class="nav-item">
                                <%= link_to "Favorites", users_path ,class: 'nav-link fas fa-heart text-dark'%>
                              </li>
                               <li class="nav-item">
                                <%= link_to "Ranking" ,root_path,class: 'nav-link fas fa-trophy text-dark'%>
                              </li>
                               <li class="nav-item">
                                <%= link_to "logout", destroy_user_session_path, method: :delete ,class: 'nav-link fas fa-sign-out-alt text-dark' %>
                              </li>
                        </ul>
                    </div>
                </div>
           </nav>
        </header>
    <% end %>
  </div>
  <body>
    <div class = "side-bar">
      <div class="container">
         <%= attachment_image_tag @user, :profile_image, :fill,size: "150x150", fallback: "no_image.jpg"%>
         <table class="table">
           <tbody>
             <tr>
               <th>name</th>
               <th><%= "#{@user.name}" %></th>
             </tr>
             <tr>
               <th>Today's Score</th>
               <th><%= @user.introduction %></th>
             </tr>
             <tr>
               <th>Follow</th>
               <th></th>
             </tr>
             <tr>
               <th>Follower</th>
               <th></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
           </tbody>
         </table>
          <div class = "btnAjuster">
            <%= link_to "",edit_user_path(@user.id) ,class: 'btn btn-warning  fas fa-user-cog'%>
          </div>
          <div class = "btnAjuster">
            <%= link_to 'MAKE!', id = "makeBtn" , class: "btn btn-warning "%>
          </div>
          <div class = "btnAjuster">
            <%= link_to 'Intro', id = "makeBtn" , class: "btn btn-warning "%>
          </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
