<!DOCTYPE html>
<html>
  <head>
    <title>Solve</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <div class="container-fluid">
      <% if user_signed_in? %>
          <header class="row d-block">
            <nav class="navbar navbar-expand-lg  text-white">
                <div class="container">
                    <%= image_tag 'logo.jpg', size:'200x200' %>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ml-auto ">
                              <li class="nav-item ">
                                <%= link_to "Home", user_path(current_user.id) ,class: 'nav-link fas fa-home text-dark'%></i>
                              </li>
                               <li class="nav-item">
                                <%= link_to "Favorites", users_path ,class: 'nav-link fas fa-users text-dark'%>
                              </li>
                               <li class="nav-item">
                                <%= link_to "Ranking" ,class: 'nav-link fas fa-book-open text-dark'%>
                              </li>
                               <li class="nav-item">
                                <%= link_to "logout", destroy_user_session_path, method: :delete ,class: 'nav-link fas fa-sign-out-alt text-dark' %>
                              </li>
                        </ul>
                    </div>
                </div>
           </nav>
        </header>
    <% end %>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
