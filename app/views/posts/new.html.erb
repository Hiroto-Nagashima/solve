<div class="container mr-0">
    <div class="row my-3">
       <h2>New Post</h2>
    </div>

    <%= form_with model:@post, url:posts_path, local: true do |f| %>
     <div class="row my-4">
       <div class="col-3 mr-0">
          <p>つぶやき</p>
       </div>
       <div class="col-7">
          <%= f.text_area :content, autofocus: true %>
       </div>
     </div>

     <div class="row">
       <div class="col-4 mx-auto">
          <%= f.submit "問題作成へ" ,class: "btn"%>
          <% end %>
       </div>
     </div>

</div>

