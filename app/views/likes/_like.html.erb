<% if post.liked_by?(current_user) %>
    <p>
      <%= link_to post_likes_path(post), method: :delete, remote: true do %>
        <i class="fas fa-heart fa-lg"></i><p class="likes-amount"><%= post.likes.count%></p>
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_likes_path(post), method: :post, remote: true do %>
        <i class="far fa-heart fa-lg"></i><p class="likes-amount"><%= post.likes.count%></p>
      <% end %>
    </p>
<% end %>